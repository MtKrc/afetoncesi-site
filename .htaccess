# Redirect /path/index.html to /path/ (trailing slash)
RewriteEngine On
RewriteBase /
RewriteCond %{REQUEST_URI} ^(.*)/index\.html$ [NC]
RewriteRule ^(.*)index\.html$ %1/ [R=301,L]

